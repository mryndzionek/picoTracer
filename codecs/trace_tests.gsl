.macro output_hex_range (size)
0x\
.   while my.size > 0
FF\
.       my.size = my.size - 1
.   endwhile
.endmacro
.
.macro output_msg(msg)
trace_$(trace.prefix)_$(my.msg.id)(\
.   for my.msg.arg as arg
.       if arg.type = "number"
seed & \
.           output_hex_range (arg.size)
.           if !last()
, \
.           endif
.      elsif arg.type = "enum"
_e_$(arg.name)[seed % $(arg.length)]\
.           if !last()
, \
.           endif
.      endif
.   endfor
);
.endmacro
